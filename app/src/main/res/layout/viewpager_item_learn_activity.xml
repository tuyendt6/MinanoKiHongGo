<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_sound" />

    <ImageButton
        android:id="@+id/btn_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_pic"
        android:layout_marginBottom="@dimen/actionbar_menu_padding"
        android:layout_marginLeft="@dimen/actionbar_menu_padding"
        android:layout_marginTop="@dimen/actionbar_menu_padding"
        android:background="@android:color/transparent"
        android:src="@drawable/speaker" />

    <TextView
        android:id="@+id/txt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/img_pic"
        android:layout_marginBottom="@dimen/actionbar_menu_padding"
        android:layout_marginTop="@dimen/actionbar_menu_padding"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_pic"
        android:layout_marginBottom="@dimen/actionbar_menu_padding"
        android:layout_marginRight="@dimen/actionbar_menu_padding"
        android:layout_marginTop="@dimen/actionbar_menu_padding"
        android:background="@android:color/transparent"
        android:src="@drawable/showtext" />
</RelativeLayout>
